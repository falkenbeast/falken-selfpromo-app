<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="48dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/mescd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#C5FFF2"
        app:cardCornerRadius="17dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <TextView
            android:id="@+id/messagepreviewid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"

            android:textColor="@color/black"
            tools:text="i will write a long message so that the message preview can go to the next line and we can se how it looks " />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/sendbuttonid"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:text="@string/send_message" />

</LinearLayout>